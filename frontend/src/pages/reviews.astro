---

<Layout title="VGL">
  <section class="carousel-section">
    <h1 class="section-title pl-16 pt-16">Popular Player Reviews</h1>
    <div class="flex justify-center items-center">
      <CarouselComponent
        client:load
        cards={slides}
        cardType="vertical"
      />
    </div>
    <ReviewsList client:load/>
  </section>
</Layout>

