import CarouselComponent from "../components/home/CarouselComponent.vue";
import ReviewsList from "../components/reviews/ReviewsList";
import Layout from "../layouts/Layout.astro";

const slides = [
  {
    id: "1",
    imagePath: "src/assets/images/zelda.png",
    gameTitle: `mesho 1`,
    gameStudio: "mesho games",
    releaseDate: "Remember bro",
  },

  {
    id: "2",
    imagePath: "src/assets/images/cyberpunk.png",
    gameTitle: `mesho 2`,
